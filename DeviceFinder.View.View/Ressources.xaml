    <!--  Border  -->
    <Style x:Key="BorderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="DimGray" />
        <Setter Property="Margin" Value="10,20,10,10" />
        <Setter Property="Padding" Value="5,10,5,5" />
    </Style>
</ResourceDictionary>