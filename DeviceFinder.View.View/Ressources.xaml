<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">


    <!--  Brushes  -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="LightGray" />
    <SolidColorBrush x:Key="NewItemBrush" Color="#9990EE90"/>
    <SolidColorBrush x:Key="EditItemBrush" Color="#99ffff00"/>

    <!--  Componetn Style  -->
    <SolidColorBrush x:Key="BorderBrush" Color="DimGray" />

    <!--  Text Formatierung  -->
    <Style x:Key="ElementTitle" TargetType="TextBlock">
        <Setter Property="Margin" Value="20,0,0,0" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="DimGray" />
        <Setter Property="FontFamily" Value="segoe ui" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!--  Header Style  -->
    <Style x:Key="HeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="FontFamily" Value="segoe ui" />
        <Setter Property="Foreground" Value="DimGray" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Right" />
        <Setter Property="Margin" Value="0,5,20,5" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <!--  Text block  -->
    <Style x:Key="TextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="segoe ui" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="telerik:StyleManager.Theme" Value="Windows8" />
        <Setter Property="Margin" Value="0,5,0,5" />
    </Style>

    <!--  Language Picker  -->
    <Style x:Key="LanguagePickerStyle" TargetType="telerik:RadComboBox">
        <Setter Property="Margin" Value="0,5,0,5" />
        <Setter Property="Width" Value="120" />
        <Setter Property="SelectedIndex" Value="0" />
        <Setter Property="telerik:StyleManager.Theme" Value="Windows8" />

    </Style>

    <!--  Buttons  -->
    <Style x:Key="ButtonStyle" TargetType="telerik:RadButton">
        <Setter Property="telerik:StyleManager.Theme" Value="Windows8" />
        <Setter Property="Width" Value="35" />
        <Setter Property="Height" Value="35" />
        <Setter Property="Margin" Value="10,5" />
    </Style>

    <!--  Seperator  -->
    <Style x:Key="SeperatorStyle" TargetType="Separator">
        <Setter Property="Foreground" Value="DimGray" />
        <Setter Property="Height" Value="5" />
    </Style>


    <!--  GridView  -->
    <Style x:Key="GridViewStyle" TargetType="telerik:RadGridView">
        <Setter Property="ShowGroupPanel" Value="False" />
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="ShowColumnFooters" Value="True" />
        <Setter Property="telerik:StyleManager.Theme" Value="Windows8" />

        <Setter Property="Margin" Value="20,5,20,20" />
    </Style>

